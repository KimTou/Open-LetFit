<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.openletfit.mapper.SourceMapper">

    <select id="getIndexSource" parameterType="java.util.List" resultType="com.openletfit.pojo.entity.Source">
        select
            s.source_id,
            s.source_title,
            s.source_path,
            s.source_cover
        from
            source as s
        left join
            module as m
        on
            s.module_id = m.module_id
        <where>
            <foreach collection="moduleIdList" item="moduleId" open="s.module_id in(" close=")" separator=",">
                #{moduleId}
            </foreach>
        </where>
        limit
            0,4
    </select>

    <select id="getSourceByModuleId" resultType="com.openletfit.pojo.entity.Source">
        select * from source where module_id = #{moduleId}
    </select>

    <select id="getDefaultSource" resultType="com.openletfit.pojo.entity.Source">
        select * from source order by source_id limit 0,4
    </select>

    <select id="searchSource" resultType="com.openletfit.pojo.entity.Source">
        select * from
            source
        where
            source_title
        like
            concat('%',#{title},'%')
    </select>

</mapper>